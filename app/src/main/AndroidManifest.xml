<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.cnf">

  <application
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:largeHeap="true"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/Theme.CodeNforceMobileAndroid"
    android:usesCleartextTraffic="true">
    <activity
      android:exported="false"
      android:name=".module_error.ErrorActivity" />
    <activity
      android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"
      android:exported="false"
      android:name=".module_auth.activity.HomeActivity" />
    <activity
      android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"
      android:exported="false"
      android:name=".module_auth.activity.InitializationActivity" />
    <activity
      android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"
      android:exported="false"
      android:name=".module_auth.activity.UserActivity" />
    <activity
      android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"
      android:exported="false"
      android:name=".module_inspection.activity.InspectionContainerActivity" />
    <activity
      android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"
      android:exported="false"
      android:name=".module_auth.activity.MuniActivity" />
    <activity
      android:screenOrientation="portrait"
      android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"
      android:exported="true"
      android:name=".module_auth.activity.MainActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
  </application>

  <uses-feature
    android:name="android.hardware.camera"
    android:required="true" />
  <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
  <uses-permission android:name="android.permission.INTERNET" />
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

  <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

</manifest>