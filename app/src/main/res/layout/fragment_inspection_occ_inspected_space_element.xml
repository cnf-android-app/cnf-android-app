<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:clickable="true"
  android:focusableInTouchMode="true"
  tools:context=".fragment.InspectionEditOccInspectedSpaceElementFragment">

  <EditText
    android:id="@+id/et_inspection_inspected_space_elements_search"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:layout_margin="@dimen/outer_margin"
    android:background="@drawable/layout_card"
    android:paddingHorizontal="@dimen/inner_padding_horizontal"
    android:hint="Search..."
    android:paddingVertical="5dp"
    android:drawableRight="@drawable/ic_baseline_search_24"
    app:layout_constraintTop_toTopOf="parent"
    >
  </EditText>

  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/rv_inspection_inspected_space_elements"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/outer_margin"
    app:layout_constraintStart_toStartOf="parent"
    android:clickable="true"
    android:focusableInTouchMode="true"
    app:layout_constraintTop_toBottomOf="@+id/et_inspection_inspected_space_elements_search" />

  <com.google.android.material.floatingactionbutton.FloatingActionButton
    android:id="@+id/btn_inspection_occ_inspected_space_elements_finish"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="30dp"
    android:backgroundTint="@color/blue_button"
    android:src="@drawable/ic_baseline_home_24"
    android:text="Finish"
    android:textColor="@color/white"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

  <com.google.android.material.floatingactionbutton.FloatingActionButton
    android:id="@+id/btn_inspection_occ_inspected_space_elements_batch_pass"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="30dp"
    android:backgroundTint="@color/blue_button"
    android:src="@drawable/ic_baseline_playlist_add_check_24"
    android:text="Finish"
    android:textColor="@color/white"
    app:layout_constraintBottom_toTopOf="@+id/btn_inspection_occ_inspected_space_elements_finish"
    app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>