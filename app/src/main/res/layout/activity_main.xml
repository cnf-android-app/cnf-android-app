<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="20dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/iv_main_logo"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginHorizontal="15dp"
        android:contentDescription="@string/logo_of_codenforce"
        android:scaleX="0.9"
        android:scaleY="0.9"
        android:src="@drawable/logo_main" />

    <ImageView
        android:id="@+id/iv_main_logo_font"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/iv_main_logo"
        android:layout_marginHorizontal="15dp"
        android:contentDescription="@string/logo_of_codenforce"
        android:scaleX="0.9"
        android:scaleY="0.9"
        android:src="@drawable/logo_main_font" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_main_logo_font"
        android:layout_margin="@dimen/outer_margin"
        android:gravity="center">

        <Button
            android:id="@+id/btn_online"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_bottom_height"
            android:layout_margin="@dimen/inner_margin_horizontal"
            android:layout_weight="1"
            android:background="@drawable/layout_card"
            android:text="@string/btn_online" />

        <Button
            android:id="@+id/btn_offline"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_bottom_height"
            android:layout_margin="@dimen/inner_margin_horizontal"
            android:layout_weight="1"
            android:background="@drawable/layout_card"
            android:text="@string/btn_offline" />
    </LinearLayout>

</RelativeLayout>