<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginVertical="@dimen/outer_margin"
  android:orientation="horizontal">


  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="7"
      android:src="@drawable/ic_baseline_circle_notifications_30"/>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:background="@drawable/underline"
      android:orientation="vertical">

      <LinearLayout
        android:id="@+id/ll_inspection_occ_notification_item_row0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
          android:id="@+id/inspection_occ_notification_item_dispatchId"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:paddingHorizontal="5dp"
          android:text="Dispatch ID: 100"
          android:textColor="@color/text_dark" />

        <TextView
          android:id="@+id/inspection_occ_notification_item_createdTS"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="bottom"
          android:text="08-06-2022 16:12:39"
          android:textAlignment="textEnd"
          android:textColor="@color/text_dark"
          tools:ignore="RtlCompat" />
      </LinearLayout>


      <TextView
        android:id="@+id/inspection_occ_notification_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="5dp"
        android:scrollbars="vertical"
        android:text="Content"
        android:textColor="@color/text_dark" />


    </LinearLayout>

  </LinearLayout>


  <!-- 屏幕右侧外边部分，正常时在屏幕中处于不可见 -->
  <LinearLayout
    android:id="@+id/ll_hidden"
    android:layout_width="100sp"
    android:layout_height="match_parent"
    android:background="@color/blue_button"
    android:gravity="center">

    <TextView
      android:id="@+id/tv_item_delete"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:text="Archive"
      android:textColor="#ffffff"
      android:textSize="15sp" />
  </LinearLayout>


</LinearLayout>