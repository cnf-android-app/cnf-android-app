<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginVertical="@dimen/inner_margin_vertical"
  android:orientation="vertical">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_card"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/inner_padding_horizontal"
    android:paddingVertical="@dimen/inner_padding_vertical">
    <ImageView
      android:id="@+id/img_inspection_inspected_space_elements_photo"
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:layout_weight="2" />

    <TextView
      android:id="@+id/tv_inspection_inspected_space_elements_photo_name"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:layout_gravity="bottom" />

    <Button
      android:id="@+id/btn_inspection_inspected_space_elements_photo_delete"
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:layout_weight="2"
      android:layout_alignParentRight="true"
      android:text="delete"
      android:textColor="@color/text_dark" />

  </LinearLayout>

</RelativeLayout>