<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/cl_occ_inspected_space_item"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginVertical="5dp"
  android:background="@drawable/layout_card">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/cl_occ_inspection_space_item_progress_panel"
    android:layout_width="80dp"
    android:layout_height="80dp">

    <ProgressBar
      android:id="@+id/pb_occ_inspection_space_item_progress_bar"
      style="@style/CircularDeterminateProgressBar"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_margin="10dp"
      android:progress="75"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">
    </ProgressBar>

    <TextView
      android:id="@+id/tv_occ_inspected_space_item_status"
      android:textStyle="bold"
      android:layout_width="80dp"
      android:layout_height="80dp"
      android:gravity="center"
      android:text="0/0"
      android:textSize="20dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"></TextView>

  </androidx.constraintlayout.widget.ConstraintLayout>

  <LinearLayout
    android:id="@+id/ll_occ_inspected_space_item_title_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:layout_alignRight="@+id/cl_occ_inspection_space_item_progress_panel"

    android:orientation="vertical">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:layout_marginHorizontal="10dp"
      android:orientation="horizontal">

      <TextView
        android:id="@+id/tv_occ_inspected_space_item_title"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Title"
        android:textColor="@color/text"
        android:textSize="20dp" />

      <TextView
        android:id="@+id/tv_occ_inspected_space_item_is_required"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="5dp"
        android:gravity="center"

        android:text="(Required)"
        android:textColor="@color/text" />

      <ImageButton
        android:id="@+id/imageBtn_occ_inspected_space_item_more_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
      android:background="@null"
        android:src="@drawable/ic_baseline_more_vert_18" />

    </LinearLayout>

    <TextView
      android:id="@+id/tv_occ_inspected_space_item_location_description"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginTop="10dp"
      android:layout_marginBottom="5dp"
      android:layout_marginHorizontal="10dp"
      android:background="@drawable/underline"
      android:text="Description: A space in which living occurs"
      android:textColor="@color/text" />

  </LinearLayout>

<!--  <ImageButton-->
<!--    android:id="@+id/imageBtn_occ_inspected_space_item_edit_button"-->
<!--    android:layout_width="50dp"-->
<!--    android:layout_height="match_parent"-->
<!--    android:layout_toRightOf="@+id/ll_occ_inspected_space_item_title_container"-->
<!--    android:src="@drawable/ic_baseline_chevron_right_24" />-->

</LinearLayout>


