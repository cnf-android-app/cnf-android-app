<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:orientation="vertical">


 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent">


    <LinearLayout
        android:paddingLeft="20sp"
        android:id="@+id/ll_tv_inspection_inspected_space_item_row0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/borders">


        <TextView
            android:id="@+id/tv_inspection_inspected_space_item_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/text"
            android:layout_weight="10"/>

        <Button
            android:id="@+id/btn_inspection_inspected_space_item_edit"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:text="Edit"
            android:layout_weight="1"/>

    </LinearLayout>

     <LinearLayout
         android:paddingLeft="20sp"
         android:paddingVertical="5sp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:background="@color/borders"
         android:layout_below="@+id/ll_tv_inspection_inspected_space_item_row0">

         <TextView
             android:id="@+id/tv_inspection_inspected_space_item_description_title"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:textColor="@color/text"
             android:text="Description"
             android:layout_weight="2"/>

         <TextView
             android:id="@+id/tv_inspection_inspected_space_item_description"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:textColor="@color/text"

             android:layout_weight="10"/>


     </LinearLayout>

 </RelativeLayout>

</RelativeLayout>