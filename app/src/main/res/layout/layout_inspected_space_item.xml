<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/cl_occ_inspected_space_item"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_margin="15dp">

  <LinearLayout
    android:id="@+id/ll_occ_inspected_space_item_title_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginHorizontal="10dp"
    android:layout_toRightOf="@+id/cl_occ_inspection_space_item_progress_panel"
    android:orientation="horizontal">
    <TextView
      android:id="@+id/tv_occ_inspected_space_item_title"
      android:textStyle="bold"

      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:text="Title"
      android:textColor="@color/text"
      android:textSize="20dp" />

    <TextView
      android:id="@+id/tv_occ_inspected_space_item_is_required"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:gravity="right"
      android:text="Required"
      android:textColor="@color/text" />

  </LinearLayout>

  <TextView
    android:id="@+id/tv_occ_inspected_space_item_location_description"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:layout_alignBottom="@+id/cl_occ_inspection_space_item_progress_panel"
    android:layout_below="@+id/ll_occ_inspected_space_item_title_container"
    android:layout_marginHorizontal="10dp"
    android:layout_toRightOf="@+id/cl_occ_inspection_space_item_progress_panel"
    android:background="@drawable/underline"
    android:text="Description: A space in which living occurs"
    android:textColor="@color/text" />

  \
  <TextView
    android:id="@+id/tv_occ_inspected_space_item_status"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:gravity="center"
    android:text="Status"
    android:textColor="@color/text"
    android:visibility="gone" />


  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/cl_occ_inspection_space_item_progress_panel"
    android:layout_width="80dp"
    android:layout_height="80dp">

    <ProgressBar
      android:id="@+id/pb_occ_inspection_space_item_progress_bar"
      style="@style/CircularDeterminateProgressBar"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_margin="5dp"
      android:progress="75"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    </ProgressBar>

    <TextView
      android:textStyle="bold"
      android:layout_width="80dp"
      android:layout_height="80dp"
      android:gravity="center"
      android:text="50%"
      android:textSize="20dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"></TextView>

  </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>


