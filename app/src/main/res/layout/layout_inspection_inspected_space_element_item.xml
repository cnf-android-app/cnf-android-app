<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingTop="5dp"
    android:paddingRight="10dp"
    android:paddingBottom="5dp">


    <RelativeLayout
        android:id="@+id/rl_inspection_inspected_space_element_item_not_expand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_inspection_inspected_space_element_item_section_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:textColor="@color/text_dark"
            android:textStyle="bold"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_inspection_inspected_space_element_item_section_title"
            android:layout_below="@+id/tv_inspection_inspected_space_element_item_section_number"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:textColor="@color/text_dark" />

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_inspection_inspected_space_element_item_section_title"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <RadioButton
                    android:id="@+id/rBtn_inspection_inspected_space_element_item_not_inspected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:onClick="onRadioButtonClicked"
                    android:text="Not Inspected" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <RadioButton
                    android:id="@+id/rBtn_inspection_inspected_space_element_item_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:onClick="onRadioButtonClicked"
                    android:text="Pass" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <RadioButton
                    android:id="@+id/rBtn_inspection_inspected_space_element_item_violation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:onClick="onRadioButtonClicked"
                    android:text="Violation" />
            </RelativeLayout>

        </RadioGroup>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_inspection_inspected_space_element_item_not_inspected_expand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_inspection_inspected_space_element_item_not_expand"
        android:layout_marginVertical="10dp"
        android:background="@drawable/layout_bg_blue">

        <LinearLayout
            android:id="@+id/ll_inspection_inspected_space_element_item_not_inspected_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_inspection_inspected_space_element_item_not_inspected_exit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:text="EXIT"
                android:textAlignment="textStart"
                android:textColor="@color/text_dark"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_inspection_inspected_space_element_item_not_inspected_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:text="SAVE"
                android:textAlignment="textEnd"
                android:textColor="@color/text_dark"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_inspection_inspected_space_element_item_pass_expand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_inspection_inspected_space_element_item_not_expand"
        android:layout_marginVertical="10dp"
        android:background="@drawable/layout_bg_blue">

        <LinearLayout
            android:id="@+id/ll_inspection_inspected_space_element_item_pass_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_inspection_inspected_space_element_item_pass_exit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_inspection_inspected_space_element_item_pass_finding"
                android:layout_alignParentLeft="true"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:text="EXIT"
                android:textAlignment="textStart"
                android:textColor="@color/text_dark"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_inspection_inspected_space_element_item_pass_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_inspection_inspected_space_element_item_pass_finding"
                android:layout_alignParentRight="true"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:text="SAVE"
                android:textAlignment="textEnd"
                android:textColor="@color/text_dark"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_inspection_inspected_space_element_item_pass_finding_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:textSize="18dp"
            android:layout_below="@+id/ll_inspection_inspected_space_element_item_pass_edit"
            android:text="Findings">

        </TextView>

        <EditText
            android:id="@+id/et_inspection_inspected_space_element_item_pass_finding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="18dp"
            android:layout_below="@+id/tv_inspection_inspected_space_element_item_pass_finding_title"
            android:hint="type..."/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_inspection_inspected_space_element_item_pass_photo"
            android:layout_below="@+id/et_inspection_inspected_space_element_item_pass_finding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_inspection_inspected_space_element_item_pass_take_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rv_inspection_inspected_space_element_item_pass_photo"
            android:layout_alignParentRight="true"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="10dp"
            android:layout_weight="5"
            android:text="Capture Photo"
            android:textColor="@color/text_dark" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_inspection_inspected_space_element_item_violation_expand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_inspection_inspected_space_element_item_pass_expand"
        android:layout_marginVertical="10dp"
        android:background="@drawable/layout_bg_blue">

        <LinearLayout
            android:id="@+id/ll_inspection_inspected_space_element_item_violation_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_inspection_inspected_space_element_item_violation_exit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:text="EXIT"
                android:textAlignment="textStart"
                android:textColor="@color/text_dark"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_inspection_inspected_space_element_item_violation_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:text="SAVE"
                android:textAlignment="textEnd"
                android:textColor="@color/text_dark"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_inspection_inspected_space_element_item_violation_finding_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:textSize="18dp"
            android:layout_below="@+id/ll_inspection_inspected_space_element_item_violation_edit"
            android:text="Findings">

        </TextView>

        <EditText
            android:id="@+id/et_inspection_inspected_space_element_item_violation_finding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="18dp"
            android:layout_below="@+id/tv_inspection_inspected_space_element_item_violation_finding_title"
            android:hint="type..."/>

        <CheckBox
            android:layout_below="@+id/et_inspection_inspected_space_element_item_violation_finding"
            android:id="@+id/cb_inspection_inspected_space_element_item_violation_include_cnf_case"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginHorizontal="18dp"
            android:text="Include in code enforcement case"/>

        <Spinner
            android:id="@+id/et_inspection_inspected_space_element_item_violation_spinner"
            android:layout_below="@+id/cb_inspection_inspected_space_element_item_violation_include_cnf_case"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_bg"
            android:layout_marginHorizontal="18dp"
            android:spinnerMode="dropdown"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_inspection_inspected_space_element_item_violation_photo"
            android:layout_below="@+id/et_inspection_inspected_space_element_item_violation_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <Button
            android:id="@+id/btn_inspection_inspected_space_element_item_violation_take_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rv_inspection_inspected_space_element_item_violation_photo"
            android:layout_alignParentRight="true"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="10dp"
            android:layout_weight="5"
            android:text="Capture Photo"
            android:textColor="@color/text_dark" />

    </RelativeLayout>

</RelativeLayout>