<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    android:paddingVertical="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_bg"
        android:orientation="horizontal"
        android:weightSum="6">

        <TextView
            android:id="@+id/tv_inspection_inspectionId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:paddingVertical="10dp"
            android:paddingLeft="20dp"
            android:textColor="@color/text_dark"
            android:textStyle="bold"
            android:textSize="20dp" />

        <LinearLayout
            android:id="@+id/ly_inspection_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_inspection_inspectionId"
            android:paddingVertical="5dp"
            android:weightSum="6">

            <TextView
                android:id="@+id/tv_inspection_address_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:paddingLeft="20dp"
                android:text="Address:"
                android:textColor="@color/text" />

            <TextView
                android:id="@+id/tv_inspection_address_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="@color/text" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_inspection_inspector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ly_inspection_address"
            android:paddingVertical="5dp"
            android:weightSum="6">

            <TextView
                android:id="@+id/tv_inspection_inspector_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:paddingLeft="20dp"
                android:text="Inspector:"
                android:textColor="@color/text" />

            <TextView
                android:id="@+id/tv_inspection_inspector_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="@color/text" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_inspection_checklist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ly_inspection_inspector"
            android:paddingVertical="5dp"
            android:weightSum="6">

            <TextView
                android:id="@+id/tv_inspection_checklist_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:paddingLeft="20dp"
                android:text="Checklist:"
                android:textColor="@color/text" />

            <TextView
                android:id="@+id/tv_inspection_checklist_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="@color/text" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_inspection_created"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ly_inspection_checklist"
            android:paddingVertical="5dp"
            android:weightSum="6">

            <TextView
                android:id="@+id/tv_inspection_created_date_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:paddingLeft="20dp"
                android:text="Created Date:"
                android:textColor="@color/text" />

            <TextView
                android:id="@+id/tv_inspection_created_date_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="@color/text" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_inspection_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ly_inspection_created"
            android:paddingVertical="5dp"
            android:weightSum="6">

            <TextView
                android:id="@+id/tv_inspection_description_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:paddingLeft="20dp"
                android:text="Description:"
                android:textColor="@color/text" />

            <TextView
                android:id="@+id/tv_inspection_description_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="@color/text" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_inspection_edit"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/ly_inspection_description"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:backgroundTint="@color/shade"
            android:text="Inspect"
            android:textColor="@color/text_dark" />

    </RelativeLayout>

</RelativeLayout>