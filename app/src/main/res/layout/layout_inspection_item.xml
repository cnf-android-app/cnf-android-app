<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/borders"
        android:orientation="horizontal"
        android:weightSum="6">

        <TextView
            android:id="@+id/tv_inspection_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:textSize="15dp"
            android:textColor="@color/text_dark"
            android:background="@color/shade"
            />

        <LinearLayout
            android:id="@+id/ly_inspection_inspector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_inspection_address"
            android:weightSum="6"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            >

            <TextView
                android:id="@+id/tv_inspection_inspector_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:paddingLeft="30dp"
                android:textColor="@color/text"
                android:text="Inspector:"/>

            <TextView
                android:id="@+id/tv_inspection_inspector_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="@color/text" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_inspection_checklist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ly_inspection_inspector"
            android:weightSum="6"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            >

            <TextView
                android:id="@+id/tv_inspection_checklist_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:paddingLeft="30dp"
                android:textColor="@color/text"
                android:text="Checklist:"/>

            <TextView
                android:id="@+id/tv_inspection_checklist_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="@color/text" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_inspection_created"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ly_inspection_checklist"
            android:weightSum="6"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            >

            <TextView
                android:id="@+id/tv_inspection_created_date_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:paddingLeft="30dp"
                android:textColor="@color/text"
                android:text="Created Date:"/>

            <TextView
                android:id="@+id/tv_inspection_created_date_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="@color/text" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_inspection_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ly_inspection_created"
            android:weightSum="6"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            >

            <TextView
                android:id="@+id/tv_inspection_description_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:layout_weight="4"
                android:textColor="@color/text"
                android:text="Description:"/>

            <TextView
                android:id="@+id/tv_inspection_description_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="@color/text" />

        </LinearLayout>


        <Button

            android:id="@+id/btn_inspection_edit"
            android:layout_width="wrap_content"
            android:layout_below="@+id/ly_inspection_description"
            android:layout_height="40dp"
            android:layout_weight="5"
            android:backgroundTint="@color/shade"
            android:textColor="@color/text_dark"
            android:layout_marginHorizontal="10dp"
            android:layout_alignParentRight="true"
            android:text="Edit " />


    </RelativeLayout>

</RelativeLayout>