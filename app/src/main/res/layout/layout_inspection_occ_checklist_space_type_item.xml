<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginVertical="@dimen/outer_margin"
  android:background="@drawable/layout_card"
  android:orientation="vertical">

  <LinearLayout
    android:id="@+id/ly_inspection_occ_checklist_space_type_row_0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="15dp"
    android:layout_marginVertical="5dp"
    android:orientation="vertical">

    <TextView
      android:id="@+id/tv_inspection_occ_checklist_space_type_title"
      android:textStyle="bold"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Checklist space type title"
      android:textColor="@color/text_dark"
      android:textSize="@dimen/card_title_size" />

    <TextView
      android:id="@+id/tv_inspection_occ_checklist_space_type_description"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Here is the description of checklist space type"
      android:textColor="@color/text_dark" />
  </LinearLayout>

  <LinearLayout
    android:id="@+id/ly_inspection_occ_checklist_space_type_row_1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/ly_inspection_occ_checklist_space_type_row_0"
    android:layout_marginHorizontal="@dimen/inner_margin_horizontal"
    android:layout_marginVertical="@dimen/inner_margin_vertical"
    android:weightSum="6">

    <TextView
      android:id="@+id/tv_inspection_occ_checklist_space_type_id_key"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="3"
      android:text="Checklist Space Id"
      android:textColor="@color/text" />

    <TextView
      android:id="@+id/tv_inspection_occ_checklist_space_type_id_value"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="3"
      android:textColor="@color/text" />
  </LinearLayout>


  <LinearLayout
    android:id="@+id/ly_inspection_occ_checklist_space_type_row_3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/ly_inspection_occ_checklist_space_type_row_2"
    android:layout_marginHorizontal="@dimen/inner_margin_horizontal"
    android:layout_marginVertical="@dimen/inner_margin_vertical"
    android:weightSum="6">

    <TextView
      android:id="@+id/tv_inspection_occ_checklist_space_type_checklist_title_key"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="3"
      android:text="Checklist"
      android:textColor="@color/text" />

    <TextView
      android:id="@+id/tv_inspection_occ_checklist_space_type_checklist_title_value"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="3"
      android:textColor="@color/text" />

  </LinearLayout>

  <LinearLayout
    android:id="@+id/ly_inspection_occ_checklist_space_type_row_2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/ly_inspection_occ_checklist_space_type_row_1"
    android:layout_marginHorizontal="@dimen/inner_margin_horizontal"
    android:layout_marginVertical="@dimen/inner_margin_vertical"
    android:weightSum="6">

    <TextView
      android:id="@+id/tv_inspection_occ_checklist_space_type_required_key"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="3"
      android:text="Required:"
      android:textColor="@color/text" />

    <TextView
      android:id="@+id/tv_inspection_occ_checklist_space_type_required_value"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="3"
      android:textColor="@color/text" />

  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/ly_inspection_occ_checklist_space_type_row_3"
    android:layout_marginHorizontal="@dimen/inner_margin_horizontal"
    android:layout_marginVertical="@dimen/inner_margin_vertical">

    <Button
      android:id="@+id/btn_inspection_occ_checklist_space_type_details"
      android:layout_width="match_parent"
      android:layout_height="@dimen/card_button_height"
      android:layout_weight="1"
      android:backgroundTint="@color/normal_button"
      android:text="Details"
      android:textColor="@color/white_font" />

    <Button
      android:id="@+id/btn_inspection_occ_checklist_space_type_select"
      android:layout_width="match_parent"
      android:layout_height="@dimen/card_button_height"
      android:layout_weight="1"
      android:backgroundTint="@color/normal_button"
      android:text="Select "
      android:textColor="@color/white_font" />

  </LinearLayout>

</RelativeLayout>
















